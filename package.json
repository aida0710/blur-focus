{
  "name": "blur-focus",
  "version": "2.0.7",
  "description": "ホバーしているテキスト以外をぼかすことで、読書中の視線の滑りを防ぎ、集中力を高めるChrome拡張機能",
  "main": "index.js",
  "scripts": {
    "watch": "webpack --config webpack/webpack.dev.js --watch",
    "build": "rimraf dist && webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "test": "npx jest --passWithNoTests",
    "format": "biome format --write src",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "check": "biome check --write src",
    "type-check": "tsc --noEmit"
  },
  "author": "aida0710",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com:aida0710/blur-focus.git"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.3",
    "@types/chrome": "0.0.158",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.29",
    "@types/react-dom": "^18.0.11",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^7.1.2",
    "glob": "^7.1.6",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2 ",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^8.0.0",
    "typescript": "^5.0.4",
    "webpack": "5.94.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.0"
  }
}
